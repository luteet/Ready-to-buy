extends includes/header.pug

block content

	.wrapper.df
		include includes/aside-customer.pug
		main.w100.customer-my-shop
			.main__top
				.breadcrumbs
					a(href="#")
						span Главная
					a(href="#")
						span Продавцам
					a(href="#")
						span  Мои товары
					span Добавить товар

				button.menu-mob.df.aic
					img(src="img/menu-mob-dots.svg" alt="Dots")
					span Меню для клиента

				h1 Мой магазин
				a(href="#" data-popup="account-link").link Информация о разделе «Мой магазин»

			h2 Статистика просмотров магазина

			.numbers.df.aic
				p 90 за сегодня
				p 2951 за неделю
				p 12951 за месяц

			label.label-copy-text
				span.label-title Ваша ссылка на магазин
				input(type="text" disabled value="https://office.readytobuystore.com//register78CC6E62")
				.copy-ico.showBlackTextItem
					span.showBlackTextItem__span Скопировать
					img(src="img/copy.svg" alt="Ico")

			button.btn-bd.button-share Поделиться

			label.w100
				span.label-title Название магазина
				input(placeholder="Введите название магазина")
			label.w100
				span.label-title Описание магазина
				textarea(placeholder="Введите описание мин. 50, макс. 4000 символов")
			.label.load-photos.w100
				span.label-title Логотип (рекомендуем загружать логотипы на прозрачном или белом фоне) 
				input(type="file" preview-target-id="file-id-1")#file-id-1
				label(for="file-id-1")
					img(src="img/plus.svg" alt="Plus")
					#file-id-1-1.file-photo

			h2 Обратная связь (не обязательно к заполнению)

			.recall.df
				label.w100
					span.label-title Комментарий для модератора
					textarea(placeholder="Введите комментарий, либо вопрос, если он есть").w100
				label.w100
					span.label-title Комментарий для модератора
					textarea(disabled).w100 Введите комментарий, либо вопрос, если он есть

			.customer-my-shop__buttons.df.aic
				button(type="submit").btn-bd Сохранить
				button(type="submit").btn-grey-full Скрыть магазин
				button(type="submit").btn-grey-full Отменить







	.popup.popup__account-link
		.popup__bgd
		.popup__content
			.popup__cross.popup__close
				img(src="img/close.svg" alt="Ico")
			h2 О внутренней системе клиентских единиц (Customer Unit - CU)
			p В данном разделе Вы можете посмотреть: <br /><br />- курс CU на сегодняшний день <br />- состояние Вашего персонального счета в долларах <br />- состояние счета CU в долларах.
			p Пополнить свой личный кошелек с помощью денег на Вашем персональном счете, Вы можете выбрав сумму в долларах и нажав кнопку Обновить. Вы сразу же сможете увидеть, какое количество CU будет добавлено в Ваш кошелек с учетом курса.<br /><br />В первой таблице на этой странице Вы можете видеть все движения по счету. Если Вам нужно посмотреть движения по счету за какой-то определенный период, необходимо установить даты интересующего периода в фильтре, который находится сверху таблицы, и нажать кнопку «Установить фильтр». Если вы хотите снова видеть все данные в таблице, необходимо нажать кнопку «Сбросить фильтр».<br /><br />При желании данные таблицы Вы можете загрузить к себе на компьютер в форматах PDF и XLS.
			button.popup__button.popup__close.bdrs8 Закрыть

	include includes/footer.pug



























	